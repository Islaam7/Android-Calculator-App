<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Calculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/light_black</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/black</item>
    </style>
    <style name="ButtonLightStyle">
        <item name="android:background">@drawable/btn_calc_shape</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TopButtonLightStyle">
        <item name="android:background">@drawable/btn_calc_shape</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="RightButtonLightStyle">
        <item name="android:background">@drawable/btn_calc_shape</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="EqualButtonStyle">
        <item name="android:background">@drawable/equal_btn_pressed</item>
        <item name="android:textColor">@color/creme_white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="MainTextColor">
        <item name="android:textColor"> @color/creme_white</item>
        <item name="android:textSize">55sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">22dp</item>
    </style>

    <style name="SecondTextColor">
        <item name="android:textColor"> @color/white2</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="GridColor">
        <item name="android:background">@drawable/container_calc_shape</item>
    </style>

</resources>